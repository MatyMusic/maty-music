{
  "compilerOptions": {
    "target": "ES2022", // ××¤×©×¨ ×œ×©×“×¨×’ ×œ-ES2022
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // ğŸ‘‡ ×—×©×•×‘ ×œ××œ×™××¡ @
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ] // â† ×‘×œ×™ "./"
    }
  },
  "include": [
    "src", // â† ××•×¡×™×£ ××¤×•×¨×©×•×ª ××ª src
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
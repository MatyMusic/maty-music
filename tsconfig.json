{
  "compilerOptions": {
    "target": "ES2022", // אפשר לשדרג ל-ES2022
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // 👇 חשוב לאליאס @
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ] // ← בלי "./"
    }
  },
  "include": [
    "src", // ← מוסיף מפורשות את src
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}